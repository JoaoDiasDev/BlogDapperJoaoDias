@model BlogDapperJoaoDias.Entities.Category
<div class="container">
    <div class="col-12">
        <div class="row">
            @if (ViewBag.Error != null && ViewBag.Error != "")
            {
                <div class="alert">
                    <div class="alert-danger">
                        @ViewBag.Error
                    </div>
                </div>
            }
            <form method="post">
                <input type="hidden" asp-for="@Model.CategoryId" value="@Model.CategoryId"/>
                <table class="table table-bordered">
                    <tr>
                        <td>
                            <label asp-for="@Model.CategoryName"></label>
                        </td>
                        <td>
                            <input type="text" name="CategoryName" asp-for="@Model.CategoryName" class="form-control" value="@Model.CategoryName"/>
                            <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="@Model.Slug"></label></td>
                        <td>
                            <input type="password" name="Slug" asp-for="@Model.Slug" class="form-control" value="@Model.Slug"/>
                            <span asp-validation-for="@Model.Slug" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Save" class="btn btn-outline-success" />
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>