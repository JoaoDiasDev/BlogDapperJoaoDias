@model BlogDapperJoaoDias.Entities.Category
<div class="container">
    <div class="col-12">
        <div class="row">
            @if (ViewBag.Error != null && ViewBag.Error != "")
            {
                <div class="alert">
                    <div class="alert-danger">
                        @ViewBag.Error
                    </div>
                </div>
            }
            <form method="post">
                <table class="table table-bordered">
                    <tr>
                        <td>
                            <b>Are you sure to delete user @Model.CategoryName?</b>
                        </td>
                    </tr>
                    <tr>
                    </tr>
                    <tr>
                        <td>
                            <button asp-action="Delete" type="submit" asp-route-id="@Model.CategoryId" class="btn btn-danger">Yes</button>
                            <a asp-action="Index" class="btn btn-info">No</a>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>